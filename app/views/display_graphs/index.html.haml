%h1 Listing Display Graphs 

%table
  %tr
    %th Name
    %th User
    %th Graph 
    %th
    %th
    %th
    %th
    %th
  - @display_graphs.each do |display_graph|
    %tr
      %td= display_graph.name
      %td= display_graph.user.name
      %td= display_graph.graph.name
      - if display_graph.has_permission?(current_user, "show")
        %td= link_to "Show", display_graph_path(display_graph)
        %td= link_to "Interact", interact_display_graph_path(display_graph)
      - if display_graph.has_permission?(current_user, "edit")
        %td= link_to "Edit", edit_display_graph_path(display_graph)
        %td= link_to "Edit Display", edit_display_graph_display_path(display_graph)
      - if display_graph.has_permission?(current_user, "full")
        %td= link_to 'Destroy', display_graph, :confirm => 'Are you sure?', :method => :delete

= link_to "New Display Graph", new_display_graph_path


