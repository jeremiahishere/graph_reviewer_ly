%p
  %b Name
  = @display_graph.name
%p
  %b Graph
  = @display_graph.graph.name
%p
  %b Public
  = @display_graph.public
%p
  %b Users
  %table
    %tr
      %th Name
      %th Permission level
    - @display_graph.display_graph_permissions.each do |perm|
      %tr
        %td= perm.user.name
        %td= perm.permission_level
  %hr

- if @display_graph.display_nodes.count > 0
  %p
    %h4 Nodes
    %ul
      - @display_graph.display_nodes.each do |node|
        %li= node.name
    %hr
- if @display_graph.display_connections.count > 0
  %p
    %h4 Connections
    %ul
      - @display_graph.display_connections.each do |connection|
        %li= connection.name
    %hr

= link_to 'Edit', edit_display_graph_path(@display_graph)
\|
= link_to 'Back', display_graphs_path
